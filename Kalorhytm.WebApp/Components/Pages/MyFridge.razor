@page "/myFridge"
@rendermode InteractiveServer

@using System.Security.Claims
@using Kalorhytm.Contracts.Models.FavouriteRecipes
@using Kalorhytm.Contracts.Models.Recipes
@using Kalorhytm.Contracts.Models.MyFridge
@using Kalorhytm.Domain.Enums
@using Kalorhytm.Logic.Interfaces
@using Kalorhytm.Logic.Interfaces.IFavouriteRecipesUseCases
@using Kalorhytm.Logic.Interfaces.IMyFridgeUseCases
@using Kalorhytm.Logic.UseCases.MyFridgeUseCases
@using Kalorhytm.WebApp.Components.Shared
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ISpoonacularRecipesService RecipesService
@inject IAddIngredientUseCase AddIngredientUseCase
@inject IGetIngredientUseCase GetIngredientUseCase
@inject IDeleteIngredientUseCase DeleteIngredientUseCase
@inject IAddRecipeToMealUseCase AddRecipeToMealUseCase
@inject IAddFavouriteRecipeUseCase AddFavouriteRecipeUseCase

<PageTitle>My Fridge</PageTitle>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-white mb-8 transition-all duration-300">My Fridge</h1>

    @* Add Ingredient Section *@
    <Card Title="Add Ingredients">
        <Input Label="Ingredient Name" 
               @bind-Value="newIngredient" 
               Placeholder="Enter ingredient name..."
               ErrorMessage="@validationMessageForAddingToFridge" />
        
        <div class="flex flex-wrap gap-3">
            <Button OnClick="AddIngredientsToFridge">
                Add to Fridge
            </Button>
            <Button OnClick="OpenFridge" Variant="ButtonVariant.Secondary">
                @(buttonForOpenningFridge ? "Close Fridge" : "Open Fridge")
            </Button>
        </div>
    </Card>

    @* Fridge Items List *@
    @if (buttonForOpenningFridge && myFridgeItems.Any())
    {
        <Card Title="My Ingredients" AdditionalClass="mt-6">
            <div class="space-y-2">
                @foreach (var ingredient in myFridgeItems)
                {
                    <div class="flex items-center justify-between p-3 bg-gray-600 rounded-lg hover:bg-gray-500 transition-all duration-200">
                        <span class="text-white font-medium">@ingredient.Name</span>
                        <Button OnClick="@(() => DeleteIngredientFromFridge(ingredient.Id))" 
                                Variant="ButtonVariant.Danger"
                                AdditionalClass="text-sm">
                            Delete
                        </Button>
                    </div>
                }
            </div>
        </Card>
    }

    @* Search Recipes by Ingredients *@
    <Card Title="Search Recipes by Ingredients" AdditionalClass="mt-6">
        <div class="mb-4">
            <p class="text-gray-300 mb-4">Search for recipes using ingredients from your fridge.</p>
            <Button OnClick="SearchRecipes">
                Search Recipes
            </Button>
        </div>
        
        @if (!string.IsNullOrEmpty(validateMessageForSearching))
        {
            <p class="text-red-400 text-sm">@validateMessageForSearching</p>
        }
    </Card>

    @* Recipe Results *@
    @if (recipes != null)
    {
        @if (recipes.Count == 0)
        {
            <Card AdditionalClass="mt-6 text-center">
                <p class="text-gray-300">No recipes found with your ingredients.</p>
            </Card>
        }
        else
        {
            <div class="mt-6">
                <h2 class="text-2xl font-semibold text-white mb-6">Found Recipes</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var recipe in recipes)
                    {
                        <Card AdditionalClass="overflow-hidden hover:scale-105 transform transition-all duration-300">
                            <img class="w-full h-48 object-cover rounded-t-xl -mx-6 -mt-6 mb-4" 
                                 src="@recipe.ImageUrl" 
                                 alt="@recipe.Title"/>
                            <h5 class="text-white font-semibold text-lg mb-2">@recipe.Title</h5>
                            <div class="flex items-center gap-2 mb-3">
                                <button @onclick="() => LikingSystem(recipe.RecipeId)" 
                                        class="text-2xl hover:scale-110 transition-transform duration-200">
                                    ü§ç
                                </button>
                                <span class="text-gray-300">@recipe.Likes likes</span>
                            </div>
                            <div class="mb-4 space-y-2">
                                <p class="text-sm text-gray-300">
                                    <span class="font-medium text-green-400">Used:</span> @string.Join(", ", recipe.UsedIngredients)
                                </p>
                                <p class="text-sm text-gray-300">
                                    <span class="font-medium text-orange-400">Missing:</span> @string.Join(", ", recipe.MissedIngredients)
                                </p>
                            </div>
                            <div class="flex flex-wrap gap-2">
                                <Button OnClick="@(() => SaveToFavourites(recipe))" 
                                        Variant="ButtonVariant.Outline"
                                        AdditionalClass="text-sm">
                                    Save Recipe
                                </Button>
                                <Button OnClick="@(() => ShowAddRecipeModal(recipe))" 
                                        AdditionalClass="text-sm">
                                    Add to Meal
                                </Button>
                            </div>
                        </Card>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <Card AdditionalClass="mt-6 text-center">
            <p class="text-gray-300">Enter ingredients to search for recipes.</p>
        </Card>
    }
</div>

@* Add Recipe to Meal Modal *@
@if (showAddRecipeModal && selectedRecipe != null)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" 
         @onclick="CloseAddRecipeModal"
         @onkeydown="@(e => { if (e.Key == "Escape") CloseAddRecipeModal(); })">
        <div class="bg-gray-700 rounded-xl p-6 w-96 max-w-[90vw] shadow-2xl" 
             @onclick:stopPropagation="true">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-semibold text-white">Add Recipe to Meal</h3>
                <button @onclick="CloseAddRecipeModal" 
                        class="text-gray-400 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-green-500 rounded">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Meal Type:</label>
                    <select @bind="selectedMealTypeForRecipe" 
                            class="w-full bg-gray-600 text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500">
                        <option value="@MealType.Breakfast">Breakfast</option>
                        <option value="@MealType.SecondBreakfast">Second Breakfast</option>
                        <option value="@MealType.Lunch">Lunch</option>
                        <option value="@MealType.Snack">Snack</option>
                        <option value="@MealType.Dinner">Dinner</option>
                    </select>
                </div>
                <div class="flex gap-2">
                    <Button OnClick="AddRecipeToMeal" AdditionalClass="flex-1">
                        Add to Meal
                    </Button>
                    <Button OnClick="CloseAddRecipeModal" Variant="ButtonVariant.Secondary" AdditionalClass="flex-1">
                        Cancel
                    </Button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string userId = "";
    private string newIngredient = "";
    private string validationMessageForAddingToFridge = "";
    private string validateMessageForSearching = "";
    private bool buttonForOpenningFridge = false;
    private List<MyFridgeModel> myFridgeItems = new();
    private List<RecipeModel>? recipes = null;
    private bool showAddRecipeModal = false;
    private RecipeModel? selectedRecipe = null;
    private MealType selectedMealTypeForRecipe = MealType.Breakfast;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User?.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? "";
        
        if (!string.IsNullOrEmpty(userId))
        {
            await LoadFridgeItems();
        }
    }

    private async Task LoadFridgeItems()
    {
        myFridgeItems = await GetIngredientUseCase.ExecuteAsync(userId);
    }

    private async Task AddIngredientsToFridge()
    {
        validationMessageForAddingToFridge = "";
        
        if (string.IsNullOrWhiteSpace(newIngredient))
        {
            validationMessageForAddingToFridge = "Ingredient name cannot be empty.";
            return;
        }

        try
        {
            var model = new MyFridgeModel
            {
                Name = newIngredient,
                UserId = userId
            };
            await AddIngredientUseCase.ExecuteAsync(model);
            newIngredient = "";
            await LoadFridgeItems();
        }
        catch (Exception ex)
        {
            validationMessageForAddingToFridge = ex.Message;
        }
    }

    private void OpenFridge()
    {
        buttonForOpenningFridge = !buttonForOpenningFridge;
    }

    private async Task DeleteIngredientFromFridge(int ingredientId)
    {
        await DeleteIngredientUseCase.ExecuteAsync(ingredientId, userId);
        await LoadFridgeItems();
    }

    private async Task SearchRecipes()
    {
        validateMessageForSearching = "";
        
        if (!myFridgeItems.Any())
        {
            validateMessageForSearching = "Please add ingredients to your fridge first.";
            return;
        }

        try
        {
            var ingredients = myFridgeItems.Select(i => i.Name).ToList();
            recipes = await RecipesService.SearchRecipesByIngredientsAsync(ingredients, 10);
        }
        catch (Exception ex)
        {
            validateMessageForSearching = ex.Message;
        }
    }

    private async Task SaveToFavourites(RecipeModel recipe)
    {
        try
        {
            var favouriteModel = new FavouriteRecipesModel
            {
                UserId = userId,
                RecipeId = recipe.RecipeId,
                Title = recipe.Title,
                ImageUrl = recipe.ImageUrl,
                Likes = recipe.Likes,
                UsedIngredientsJson = System.Text.Json.JsonSerializer.Serialize(recipe.UsedIngredients),
                MissedIngredientsJson = System.Text.Json.JsonSerializer.Serialize(recipe.MissedIngredients)
            };
            await AddFavouriteRecipeUseCase.ExecuteAsync(favouriteModel);
        }
        catch (Exception ex)
        {
            // Handle error
        }
    }

    private void ShowAddRecipeModal(RecipeModel recipe)
    {
        selectedRecipe = recipe;
        showAddRecipeModal = true;
    }

    private void CloseAddRecipeModal()
    {
        showAddRecipeModal = false;
        selectedRecipe = null;
    }

    private async Task AddRecipeToMeal()
    {
        if (selectedRecipe != null)
        {
            try
            {
                await AddRecipeToMealUseCase.ExecuteAsync(selectedRecipe.RecipeId, selectedRecipe.Title, 1.0, selectedMealTypeForRecipe, DateTime.Today, userId);
                CloseAddRecipeModal();
            }
            catch (Exception ex)
            {
                // Handle error
            }
        }
    }

    private async Task LikingSystem(int recipeId)
    {
        // Implement liking system
    }
}
