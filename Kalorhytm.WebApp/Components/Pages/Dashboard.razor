                @foreach (var entry in lunchEntries)
                {
                    <div class="flex justify-between items-center p-3 bg-gray-600 rounded-md mb-2">
                        <div class="flex-1">
                            <h4 class="font-medium text-white">@entry.Food.Name</h4>
                            <p class="text-sm text-white opacity-80">@entry.Quantity g</p>
                        </div>
                        <div class="text-right text-sm text-white mr-4">
                            <div>@entry.TotalCalories.ToString("F0") kcal</div>
                            <div>P: @entry.TotalProtein.ToString("F1")g C: @entry.TotalCarbohydrates.ToString("F1")g F: @entry.TotalFat.ToString("F1")g</div>
                        </div>
                        <button @onclick="() => RemoveMealEntry(entry)" 
                                class="bg-red-500 text-white p-2 rounded-md hover:bg-red-600 transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                        </button>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-4 text-white opacity-70">
                    <p>No meals</p>
                </div>
            }
        </div>

        <!-- Snack -->
        <div class="bg-gray-700 rounded-lg shadow-md p-6">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-white">üçé Snack</h3>
                <button @onclick="() => ShowAddFoodModal(MealType.Snack)" 
                        class="bg-green-500 text-white p-2 rounded-full hover:bg-green-600 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                </button>
