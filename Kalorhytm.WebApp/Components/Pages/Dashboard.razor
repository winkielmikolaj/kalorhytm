            @{
                var dinnerEntries = dailyNutrition?.MealEntries?.Where(me => me.MealType == MealType.Dinner).ToList() ?? new List<MealEntryModel>();
            }
            @if (dinnerEntries.Any())
            {
                @foreach (var entry in dinnerEntries)
                {
                    <div class="flex justify-between items-center p-3 bg-gray-600 rounded-md mb-2">
                        <div class="flex-1">
                            <h4 class="font-medium text-white">@entry.Food.Name</h4>
                            <p class="text-sm text-white opacity-80">@entry.Quantity g</p>
                        </div>
                        <div class="text-right text-sm text-white mr-4">
                            <div>@entry.TotalCalories.ToString("F0") kcal</div>
                            <div>P: @entry.TotalProtein.ToString("F1")g C: @entry.TotalCarbohydrates.ToString("F1")g F: @entry.TotalFat.ToString("F1")g</div>
                        </div>
                        <button @onclick="() => RemoveMealEntry(entry)" 
                                class="bg-red-500 text-white p-2 rounded-md hover:bg-red-600 transition-colors">
