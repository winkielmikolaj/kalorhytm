<div class="container mx-auto px-4 py-8 bg-gray-600 min-h-screen">
    <h1 class="text-3xl font-bold text-white mb-8">Meal Plan</h1>
    
    <!-- Date Selector -->
    <div class="mb-6">
        <label for="selectedDate" class="block text-sm font-medium text-white mb-2">Date:</label>
        <input type="date" id="selectedDate" @bind="selectedDate" @bind:format="yyyy-MM-dd" 
               @bind:after="OnDateChanged"
               class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <button @onclick="LoadData" class="ml-2 bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
            Load
        </button>
    </div>

    <!-- Daily Nutrition Summary -->
    @if (dailyNutrition != null && dailyRequirements != null)
    {
        <div class="bg-gray-700 rounded-lg shadow-md p-6 mb-8">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold text-white">Daily Summary</h2>
                <button @onclick="ShowEditRequirementsModal" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 text-sm">
                    Edit Requirements
                </button>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
                <div class="bg-gray-700 p-6 rounded-lg shadow-md border border-gray-500">
                    <h3 class="text-lg font-semibold text-white mb-2">Calories</h3>
                    <p class="text-3xl font-bold text-white">@dailyNutrition.TotalCalories.ToString("F0")</p>
                    <p class="text-sm text-white opacity-80">of @dailyRequirements.CalorieGoal.ToString("F0") kcal</p>
                    <div class="mt-2 w-full bg-gray-500 rounded-full h-2 relative overflow-hidden">
                        @if (GetCaloriePercentage() > 100)
                        {
                            var calorieTotalPercentage = GetCaloriePercentage();
                            var calorieNormalWidth = (100 / calorieTotalPercentage) * 100;
                            var calorieRedWidth = 100 - calorieNormalWidth;
                            <div class="bg-pink-300 h-2 rounded-full absolute top-0 left-0" style="width: 100%"></div>
                            <div class="bg-red-600 h-2 rounded-full absolute top-0" style="left: @calorieNormalWidth.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%; width: @calorieRedWidth.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        }
                        else
                        {
                            <div class="bg-pink-300 h-2 rounded-full" style="width: @GetCaloriePercentage().ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        }
                    </div>
                </div>
                
                <div class="bg-gray-700 p-6 rounded-lg shadow-md border border-gray-500">
                    <h3 class="text-lg font-semibold text-white mb-2">Protein</h3>
                    <p class="text-3xl font-bold text-white">@dailyNutrition.TotalProtein.ToString("F1")</p>
                    <p class="text-sm text-white opacity-80">of @dailyRequirements.ProteinGoal.ToString("F1") g</p>
                    <div class="mt-2 w-full bg-gray-500 rounded-full h-2 relative overflow-hidden">
                        @if (IsProteinExceeded())
                        {
                            var proteinTotalPercentage = GetProteinPercentage();
                            var proteinNormalWidth = (100 / proteinTotalPercentage) * 100;
                            var proteinRedWidth = 100 - proteinNormalWidth;
                            <div class="bg-sky-300 h-2 rounded-full absolute top-0 left-0" style="width: 100%"></div>
                            <div class="bg-red-600 h-2 rounded-full absolute top-0" style="left: @proteinNormalWidth.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%; width: @proteinRedWidth.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        }
                        else
                        {
                            <div class="bg-sky-300 h-2 rounded-full" style="width: @GetProteinPercentage().ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        }
                    </div>
                </div>
                
                <div class="bg-gray-700 p-6 rounded-lg shadow-md border border-gray-500">
                    <h3 class="text-lg font-semibold text-white mb-2">Carbohydrates</h3>
                    <p class="text-3xl font-bold text-white">@dailyNutrition.TotalCarbohydrates.ToString("F1")</p>
                    <p class="text-sm text-white opacity-80">of @dailyRequirements.CarbohydrateGoal.ToString("F1") g</p>
                    <div class="mt-2 w-full bg-gray-500 rounded-full h-2 relative overflow-hidden">
                        @if (IsCarbohydrateExceeded())
                        {
                            var carbTotalPercentage = GetCarbohydratePercentage();
                            var carbNormalWidth = (100 / carbTotalPercentage) * 100;
                            var carbRedWidth = 100 - carbNormalWidth;
                            <div class="bg-violet-300 h-2 rounded-full absolute top-0 left-0" style="width: 100%"></div>
                            <div class="bg-red-600 h-2 rounded-full absolute top-0" style="left: @carbNormalWidth.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%; width: @carbRedWidth.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        }
                        else
                        {
                            <div class="bg-violet-300 h-2 rounded-full" style="width: @GetCarbohydratePercentage().ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        }
                    </div>
                </div>
                
                <div class="bg-gray-700 p-6 rounded-lg shadow-md border border-gray-500">
                    <h3 class="text-lg font-semibold text-white mb-2">Fat</h3>
                    <p class="text-3xl font-bold text-white">@dailyNutrition.TotalFat.ToString("F1")</p>
                    <p class="text-sm text-white opacity-80">of @dailyRequirements.FatGoal.ToString("F1") g</p>
                    <div class="mt-2 w-full bg-gray-500 rounded-full h-2 relative overflow-hidden">
                        @if (IsFatExceeded())
                        {
                            var fatTotalPercentage = GetFatPercentage();
                            var fatNormalWidth = (100 / fatTotalPercentage) * 100;
                            var fatRedWidth = 100 - fatNormalWidth;
                            <div class="bg-amber-200 h-2 rounded-full absolute top-0 left-0" style="width: 100%"></div>
                            <div class="bg-red-600 h-2 rounded-full absolute top-0" style="left: @fatNormalWidth.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%; width: @fatRedWidth.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        }
                        else
                        {
                            <div class="bg-amber-200 h-2 rounded-full" style="width: @GetFatPercentage().ToString("F2", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

