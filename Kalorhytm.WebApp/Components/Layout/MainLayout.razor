@* Main Layout Component
   Features:
   - Top navbar layout
   - Full-width content area
   - Responsive design
   - Footer
   - Global animations
*@
@inherits LayoutComponentBase

@* Required for MudBlazor components *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<div class="min-h-screen bg-gray-50 text-gray-800 font-sans">
    @* Top Navigation Bar *@
    <NavBar />

    @* Main Content Area with smooth transitions *@
    <main class="flex-1 transition-all duration-300 ease-in-out">
        <div class="max-w-md mx-auto sm:max-w-4xl pb-24 animate-fade-in">
            @Body
        </div>
    </main>

    @* Footer *@
    <Footer />
</div>
