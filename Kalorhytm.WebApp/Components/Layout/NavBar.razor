@* Top Navigation Bar Component
   Features:
   - Responsive design with hamburger menu on mobile
   - Active link highlighting
   - Modern, minimalist fitness app styling
   - Smooth animations
*@
@using Microsoft.AspNetCore.Components.Routing
@implements IDisposable
@inject NavigationManager NavigationManager

<nav class="sticky top-0 z-50 bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            @* Logo / App Name - Left Side *@
            <div class="flex items-center">
                <NavLink href="/" class="flex items-center gap-3 text-gray-900 hover:text-emerald-600 transition-colors duration-200">
                    <div class="w-10 h-10 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center text-white shadow-lg shadow-emerald-500/30">
                        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="currentColor" fill-opacity="0.2"/>
                            <path d="M12 7V17M12 17L9 14M12 17L15 14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M16.5 3C14.76 3 13.09 3.81 12 5.09C10.91 3.81 9.24 3 7.5 3C4.42 3 2 5.42 2 8.5C2 12.28 5.4 15.36 10.55 20.03L12 21.35L13.45 20.03C18.6 15.36 22 12.28 22 8.5C22 5.42 19.58 3 16.5 3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-xl font-bold text-slate-900 tracking-tight leading-none">Kalo<span class="text-emerald-600">rhytm</span></span>
                        <span class="text-[10px] uppercase tracking-[0.2em] text-slate-400 font-bold mt-0.5">Healthy Life</span>
                    </div>
                </NavLink>
            </div>

            @* Desktop Navigation - Right Side *@
            <div class="hidden md:flex md:items-center md:space-x-2">
                <NavLink href="/dashboard" class="nav-link-desktop" Match="NavLinkMatch.All">
                    Dashboard
                </NavLink>
                
                <NavLink href="/myFridge" class="nav-link-desktop" Match="NavLinkMatch.All">
                    My Fridge
                </NavLink>
                
                <NavLink href="/recipes" class="nav-link-desktop" Match="NavLinkMatch.All">
                    Recipes
                </NavLink>
                
                <NavLink href="/profile" class="nav-link-desktop" Match="NavLinkMatch.All">
                    Profile
                </NavLink>

                <AuthorizeView>
                    <Authorized>
                        <div class="flex items-center space-x-4 ml-4 pl-4 border-l border-gray-200">
                            <span class="text-sm text-gray-700 font-medium">@context.User.Identity?.Name</span>
                            <form action="Account/Logout" method="post" class="inline">
                                <AntiforgeryToken/>
                                <input type="hidden" name="ReturnUrl" value="@currentUrl"/>
                                <button type="submit" class="px-4 py-2 rounded-xl text-sm font-medium text-white bg-red-500 hover:bg-red-600 transition-all duration-200 shadow-sm hover:shadow-md">
                                    Logout
                                </button>
                            </form>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="flex items-center space-x-3 ml-4 pl-4 border-l border-gray-200">
                            <NavLink href="/Account/Register" class="px-4 py-2 rounded-xl text-sm font-medium text-gray-700 hover:bg-gray-100 transition-all">
                                Register
                            </NavLink>
                            <NavLink href="/Account/Login" class="px-4 py-2 rounded-xl text-sm font-medium text-white bg-emerald-500 hover:bg-emerald-600 transition-all shadow-sm hover:shadow-md">
                                Login
                            </NavLink>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>

            @* Mobile Hamburger Button *@
            <div class="md:hidden">
                <button @onclick="ToggleMobileMenu" 
                        class="inline-flex items-center justify-center p-2 rounded-lg text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-emerald-500 transition-all duration-200"
                        aria-expanded="false"
                        aria-label="Toggle navigation menu">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        @if (isMobileMenuOpen)
                        {
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        }
                        else
                        {
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        }
                    </svg>
                </button>
            </div>
        </div>
    </div>

    @* Mobile Navigation Menu *@
    <div class="md:hidden overflow-hidden transition-all duration-300 ease-in-out @(isMobileMenuOpen ? "max-h-96 opacity-100" : "max-h-0 opacity-0")">
        <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-200">
            <NavLink href="/dashboard" class="nav-link-mobile" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                Dashboard
            </NavLink>
            
            <NavLink href="/myFridge" class="nav-link-mobile" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                My Fridge
            </NavLink>
            
            <NavLink href="/recipes" class="nav-link-mobile" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                Recipes
            </NavLink>
            
            <NavLink href="/profile" class="nav-link-mobile" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                Profile
            </NavLink>

            <AuthorizeView>
                <Authorized>
                    <div class="pt-4 pb-3 border-t border-gray-200 mt-2">
                        <div class="px-3 mb-3">
                            <div class="text-base font-medium text-gray-900">@context.User.Identity?.Name</div>
                        </div>
                        <form action="Account/Logout" method="post" class="px-3">
                            <AntiforgeryToken/>
                            <input type="hidden" name="ReturnUrl" value="@currentUrl"/>
                            <button type="submit" class="nav-link-mobile text-red-600 hover:text-white hover:bg-red-500 w-full text-left rounded-lg">
                                Logout
                            </button>
                        </form>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="pt-4 pb-3 border-t border-gray-200 mt-2 space-y-1">
                        <NavLink href="/Account/Register" class="nav-link-mobile" @onclick="CloseMobileMenu">
                            Register
                        </NavLink>
                        <NavLink href="/Account/Login" class="nav-link-mobile" @onclick="CloseMobileMenu">
                            Login
                        </NavLink>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>


@code {
    private bool isMobileMenuOpen = false;
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        isMobileMenuOpen = false;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        // Close mobile menu when navigating
        isMobileMenuOpen = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

