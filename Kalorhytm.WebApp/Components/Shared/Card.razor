@* Reusable Card Component *@
<div class="@($"bg-white rounded-3xl p-6 shadow-lg shadow-slate-200/50 mb-6 border border-slate-100 transition-all duration-300 hover:shadow-xl hover:shadow-slate-200/60 {AdditionalClass}")">
    @if (!string.IsNullOrEmpty(Title))
    {
        <div class="mb-4 border-b border-slate-50 pb-3">
            <h3 class="text-lg font-bold text-slate-900 tracking-tight">@Title</h3>
        </div>
    }
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? Title { get; set; }
    [Parameter] public string AdditionalClass { get; set; } = "";
}
