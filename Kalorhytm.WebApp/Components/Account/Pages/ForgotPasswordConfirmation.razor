@using Kalorhytm.WebApp.Components.Shared

@page "/Account/ForgotPasswordConfirmation"

<PageTitle>Forgot password confirmation</PageTitle>

<div class="min-h-screen flex items-center justify-center px-4 py-12 bg-gradient-to-br from-slate-50 via-white to-emerald-50/30">
    <div class="w-full max-w-md">
        <Card>
            <div class="text-center">
                <div class="w-20 h-20 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-10 h-10 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-slate-900 mb-4 tracking-tight">Check your email</h1>
                <p class="text-slate-600 mb-6" role="alert">
                    Please check your email to reset your password.
                </p>
                <a href="Account/Login" class="inline-block text-emerald-600 hover:text-emerald-700 transition-colors duration-200 font-medium">
                    Back to login
                </a>
            </div>
        </Card>
    </div>
</div> 