@page "/Account/ResetPasswordConfirmation"
<PageTitle>Reset password confirmation</PageTitle>

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <Card>
        <div class="text-center">
            <svg class="w-16 h-16 text-green-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h1 class="text-3xl font-bold text-white mb-4">Reset password confirmation</h1>
            <p class="text-gray-300 mb-6" role="alert">
                Your password has been reset. Please <a href="Account/Login" class="text-green-400 hover:text-green-300 transition-colors duration-200 underline">click here to log in</a>.
            </p>
        </div>
    </Card>
</div> 