@page "/Account/Manage"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using Kalorhytm.Infrastructure
@using Microsoft.AspNetCore.Http

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager

<PageTitle>Tw√≥j Profil</PageTitle>

<h3>Tw√≥j Profil</h3>
<StatusMessage Message="@message" />

<div class="row">
    <div class="col-md-6">
        <EditForm Model="Input" FormName="profile" OnValidSubmit="OnValidSubmitAsync" enctype="multipart/form-data">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />

            <div class="mb-4 text-center">
                @if (Input.ProfilePicture != null && Input.ProfilePicture.Length > 0)
                {
                    <img src="data:image/png;base64,@Convert.ToBase64String(Input.ProfilePicture)"
                         class="rounded-circle mb-2"
                         style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #eee;" 
                         alt="Zdjƒôcie profilowe" />
                }
                else
                {
                    <div class="rounded-circle mb-2 bg-secondary d-flex align-items-center justify-content-center mx-auto"
                         style="width: 150px; height: 150px; color: white; font-size: 3rem;">
                        üë§
                    </div>
                }

                <div class="mt-3">
                    <label for="imageUpload" class="form-label fw-bold">Wybierz nowe zdjƒôcie</label>
                    <input type="file" id="imageUpload" name="Input.ImageFile" class="form-control" accept=".png,.jpg,.jpeg" />
                </div>
            </div>

            <div class="form-floating mb-3">
                <input type="text" value="@username" class="form-control" placeholder="Nazwa u≈ºytkownika" disabled />
                <label>Nazwa u≈ºytkownika</label>
            </div>

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.FirstName" class="form-control" placeholder="Imiƒô" />
                <label>Imiƒô</label>
                <ValidationMessage For="() => Input.FirstName" class="text-danger" />
            </div>

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.LastName" class="form-control" placeholder="Nazwisko" />
                <label>Nazwisko</label>
                <ValidationMessage For="() => Input.LastName" class="text-danger" />
            </div>

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.PhoneNumber" class="form-control" placeholder="Numer telefonu" />
                <label>Numer telefonu</label>
                <ValidationMessage For="() => Input.PhoneNumber" class="text-danger" />
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Zapisz zmiany</button>
        </EditForm>
    </div>
</div>

@code {
    private ApplicationUser user = default!;
    private string? username;
    private string? message;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        user = await UserAccessor.GetRequiredUserAsync(HttpContext);
        username = await UserManager.GetUserNameAsync(user);

        if (Input.FirstName == null && Input.LastName == null && Input.PhoneNumber == null)
        {
            Input.PhoneNumber = await UserManager.GetPhoneNumberAsync(user);
            Input.FirstName = user.FirstName;
            Input.LastName = user.LastName;
            Input.ProfilePicture = user.ProfilePicture;
        }
    }

    private async Task OnValidSubmitAsync()
    {
        bool hasChanges = false;

        // 1. OBS≈ÅUGA ZDJƒòCIA
        // Sprawdzamy, czy w modelu pojawi≈Ç siƒô plik (dziƒôki name="Input.ImageFile")
        if (Input.ImageFile != null)
        {
            using var memoryStream = new MemoryStream();
            await Input.ImageFile.CopyToAsync(memoryStream);
            
            // Prosta walidacja rozmiaru (np. max 5MB)
            if (memoryStream.Length < 5 * 1024 * 1024) 
            {
                user.ProfilePicture = memoryStream.ToArray();
                var photoResult = await UserManager.UpdateAsync(user);
                if (!photoResult.Succeeded)
                {
                    message = "B≈ÇƒÖd: Nie uda≈Ço siƒô zaktualizowaƒá zdjƒôcia.";
                    return;
                }
                hasChanges = true;
            }
            else
            {
                message = "B≈ÇƒÖd: Plik jest zbyt du≈ºy (max 5MB).";
                return;
            }
        }

        // 2. OBS≈ÅUGA DANYCH TEKSTOWYCH
        if (Input.FirstName != user.FirstName || Input.LastName != user.LastName)
        {
            user.FirstName = Input.FirstName;
            user.LastName = Input.LastName;
            var updateResult = await UserManager.UpdateAsync(user);
            if (!updateResult.Succeeded)
            {
                message = "B≈ÇƒÖd: Nie uda≈Ço siƒô zaktualizowaƒá danych.";
                return;
            }
            hasChanges = true;
        }

        var phoneNumber = await UserManager.GetPhoneNumberAsync(user);
        if (Input.PhoneNumber != phoneNumber)
        {
            var setPhoneResult = await UserManager.SetPhoneNumberAsync(user, Input.PhoneNumber);
            if (!setPhoneResult.Succeeded)
            {
                RedirectManager.RedirectToCurrentPageWithStatus("B≈ÇƒÖd: Nie uda≈Ço siƒô ustawiƒá numeru telefonu.", HttpContext);
                return;
            }
            hasChanges = true;
        }

        // 3. FINALIZACJA
        if (hasChanges)
        {
            await SignInManager.RefreshSignInAsync(user);
            RedirectManager.RedirectToCurrentPageWithStatus("Tw√≥j profil zosta≈Ç zaktualizowany", HttpContext);
        }
        else
        {
             RedirectManager.RedirectToCurrentPageWithStatus("Nie wprowadzono ≈ºadnych zmian", HttpContext);
        }
    }

    private sealed class InputModel
    {
        [Phone]
        [Display(Name = "Numer telefonu")]
        public string? PhoneNumber { get; set; }

        [Display(Name = "Imiƒô")]
        public string? FirstName { get; set; }

        [Display(Name = "Nazwisko")]
        public string? LastName { get; set; }

        // To pole s≈Çu≈ºy tylko do wy≈õwietlania obecnego zdjƒôcia (z bazy)
        public byte[]? ProfilePicture { get; set; }

        // To pole s≈Çu≈ºy do pobrania nowego pliku z formularza
        // Musi pasowaƒá do atrybutu name="Input.ImageFile" w HTML
        public IFormFile? ImageFile { get; set; }
    }
}