<h3>TwÃ³j Profil</h3>
<StatusMessage Message="@message" />

<div class="row">
    <div class="col-md-6">
        <EditForm Model="Input" FormName="profile" OnValidSubmit="OnValidSubmitAsync" enctype="multipart/form-data">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />

            <div class="mb-4 text-center">
                @if (Input.ProfilePicture != null && Input.ProfilePicture.Length > 0)
                {
                    <img src="data:image/png;base64,@Convert.ToBase64String(Input.ProfilePicture)"
                         class="rounded-circle mb-2"
                         style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #eee;" 
                         alt="ZdjÄ™cie profilowe" />
                }
                else
                {
                    <div class="rounded-circle mb-2 bg-secondary d-flex align-items-center justify-content-center mx-auto"
                         style="width: 150px; height: 150px; color: white; font-size: 3rem;">
                        ðŸ‘¤
                    </div>
                }

                <div class="mt-3">
                    <label for="imageUpload" class="form-label fw-bold">Wybierz nowe zdjÄ™cie</label>
                    <input type="file" id="imageUpload" name="Input.ImageFile" class="form-control" accept=".png,.jpg,.jpeg" />
                    <ValidationMessage For="() => Input.ImageFile" class="text-danger" />
                </div>
            </div>

            <div class="form-floating mb-3">
                <input type="text" value="@username" class="form-control" placeholder="Nazwa uÅ¼ytkownika" disabled />
                <label>Nazwa uÅ¼ytkownika</label>
            </div>

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.FirstName" class="form-control" placeholder="ImiÄ™" />
                <label>ImiÄ™</label>
