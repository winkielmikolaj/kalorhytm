@inherits LayoutComponentBase
@layout Kalorhytm.WebApp.Components.Layout.MainLayout

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-slate-900 mb-2 tracking-tight">Manage your account</h1>
        <p class="text-slate-500">Change your account settings</p>
    </div>
    
    <div class="flex flex-col lg:flex-row gap-8">
        @* Navigation Menu *@
        <div class="lg:w-64 flex-shrink-0">
            <ManageNavMenu />
        </div>
        
        @* Main Content *@
        <div class="flex-1 min-w-0">
            @Body
        </div>
    </div>
</div> 