@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Routing
@using Kalorhytm.Infrastructure

@inject SignInManager<ApplicationUser> SignInManager

<Card>
    <nav class="space-y-1">
        <NavLink href="Account/Manage" Match="NavLinkMatch.All" class="manage-nav-link">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>Profile</span>
        </NavLink>
        <NavLink href="Account/Manage/Email" class="manage-nav-link">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>Email</span>
        </NavLink>
        <NavLink href="Account/Manage/ChangePassword" class="manage-nav-link">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <span>Password</span>
        </NavLink>
        @if (hasExternalLogins)
        {
            <NavLink href="Account/Manage/ExternalLogins" class="manage-nav-link">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                </svg>
                <span>External logins</span>
            </NavLink>
        }
        <NavLink href="Account/Manage/TwoFactorAuthentication" class="manage-nav-link">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <span>Two-factor authentication</span>
        </NavLink>
        <NavLink href="Account/Manage/PersonalData" class="manage-nav-link">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span>Personal data</span>
        </NavLink>
    </nav>
</Card>

<style>
    ::deep .manage-nav-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        color: rgb(209 213 219); /* text-gray-300 */
        transition: all 0.2s;
        text-decoration: none;
    }

    ::deep .manage-nav-link:hover {
        background-color: rgb(55 65 81); /* bg-gray-600 */
        color: rgb(34 197 94); /* text-green-500 */
    }

    ::deep .manage-nav-link.active {
        background-color: rgb(34 197 94); /* bg-green-500 */
        color: white;
    }
</style>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
} 